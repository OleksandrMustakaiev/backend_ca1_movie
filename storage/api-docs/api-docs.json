                                        "example": "(Rate up to 10)"
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "string",
                                        "example": "Image"
                                    },
                                    "production_company_id": {
                                        "type": "integer",
                                        "format": "integer",
                                        "example": "1"
                                    },
                                    "directors": {
                                        "type": "array",
